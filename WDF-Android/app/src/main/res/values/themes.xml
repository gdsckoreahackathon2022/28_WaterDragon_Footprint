<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuryongFootprint" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_blue</item>
        <!-- Customize your theme here. -->
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Actionbar</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
    </style>

    <style name="AppTheme.Actionbar" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">#222222</item>
    </style>

    <style name="AppTheme.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#222222</item>
    </style>
</resources>